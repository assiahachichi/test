<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    android:orientation="horizontal"

    android:background="@color/white"
    android:gravity="center">

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="3"
        android:columnCount="3"
        android:background="@color/purple_200"
        android:layout_gravity="center"
        tools:context=".MainActivity">

        <ImageView
            android:id="@+id/v11"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_nothing"
            android:tag="0 0"

            />
        <ImageView

            android:id="@+id/v12"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_nothing"
            android:tag="0 1"
            />
        <ImageView
            android:id="@+id/v13"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_nothing"
            android:tag="0 2"
            />
        <ImageView

            android:id="@+id/v21"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_nothing"
            android:tag="1 0"
            /><ImageView

        android:id="@+id/v22"
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:layout_margin="10dp"
        android:src="@drawable/ic_nothing"
        android:tag="1 1"
        /><ImageView

        android:id="@+id/v23"
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:layout_margin="10dp"
        android:src="@drawable/ic_nothing"
        android:tag="1 2"
        /><ImageView

        android:id="@+id/v31"
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:layout_margin="10dp"
        android:src="@drawable/ic_nothing"
        android:tag="2 0"
        /><ImageView

        android:id="@+id/v32"
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:layout_margin="10dp"
        android:src="@drawable/ic_nothing"
        android:tag="2 1"
        /><ImageView

        android:id="@+id/v33"
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:layout_margin="10dp"
        android:src="@drawable/ic_nothing"
        android:tag="2 2"
        />
    </GridLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginLeft="5dp">
        <EditText
            android:id="@+id/ed_heure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MM:SS"
            android:textColor="@color/black"
            >

        </EditText>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/arrow_player1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_arrow"/>

            <EditText
                android:id="@+id/edittext_name_player1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Player"
                android:textColor="@color/black" />
            <EditText
                android:id="@+id/edittext_score_player1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/teal_700"
                android:text="10"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView

                android:id="@+id/arrow_player2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_arrow"/>
            <EditText
                android:id="@+id/edittext_name_player2"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:text="Player"
                />
            <EditText

                android:id="@+id/edittext_score_player2"
                android:layout_width="wrap_content"
                android:textColor="@color/teal_700"
                android:layout_height="wrap_content"
                android:text="10"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>